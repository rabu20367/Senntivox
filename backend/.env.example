# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database
MONGO_URI=mongodb://localhost:27017/sentivox

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (for password reset, etc.)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM='Sentivox <noreply@sentivox.com>'

# Frontend URLs (for email templates)
FRONTEND_BASE_URL=http://localhost:3000
PASSWORD_RESET_URL=/reset-password
EMAIL_VERIFICATION_URL=/verify-email

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # Rate limit window in ms (default 15 minutes)
RATE_LIMIT_MAX=100  # Max requests per window

# Security
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=1

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Session
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000  # 24 hours

# API Keys (Optional)
# OPENAI_API_KEY=your_openai_api_key
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
